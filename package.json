{
  "name": "umcssleague",
  "version": "0.7.0",
  "author": "Ewan Massey",
  "description": "League Management Program for UoM Cue Sports Sociery",
  "homepage": ".",
  "main": "build/electron/main.js",
  "license": "GPL-3.0-or-later",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "immutability-helper": "^3.1.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.0",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none yarn start --no-lazy\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron . --inspect=5858 --remote-debugging-port=9223\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder",
    "electron:dist": "yarn build && tsc -p electron && electron-builder",
    "eject": "react-scripts eject"
  },

  "build": {
    "productName": "UMCSS League",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "appId": "umcss-league",
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "pvmplayer_portable.exe"
    },
    "directories": {
      "output": "electron/output"
    }
  },

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.0",
    "electron-builder": "22.14.13",
    "eslint": "^8.13.0",
    "typescript": "^4.6.3",
    "@types/node": "^17.0.15",
    "@types/react-beautiful-dnd": "^13.1.2",
    "wait-on": "^6.0.0"
  }
}
